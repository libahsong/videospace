extends ../base 
include ../mixins/video 

block content 
    .profile__data
        if !user.avatarUrl
            span ðŸ˜¸ add you avatar 
        else if user.avatarUrl.includes("github")
            img(src=user.avatarUrl,style="width:80px;height:80px").avatar
        else 
            img(src="/"+user.avatarUrl,style="width:80px;height:80px").avatar
        h3=user.name
    .video-grid
        each video in user.videos 
            +video(video)
        else 
            span Upload your video
        